<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/iho"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/music_pic"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:id="@+id/d86"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_marginStart="18dp"
            android:layout_marginLeft="18dp"
            android:layout_toEndOf="@+id/music_pic"
            android:layout_toRightOf="@+id/music_pic"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ii1"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fadingEdge="horizontal"
                    android:focusable="true"
                    android:singleLine="true" />

                <TextView
                    android:id="@+id/m_"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:ellipsize="end"
                    android:fadingEdge="horizontal"
                    android:scrollHorizontally="true"
                    android:singleLine="true" />
            </LinearLayout>

<!--            <ImageButton-->
<!--                android:id="@+id/y6"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_gravity="center_vertical"-->
<!--                android:background="@null"-->
<!--                android:contentDescription="关闭"-->
<!--                android:padding="6dp"-->
<!--                android:src="@drawable/notification_exit" />-->
        </LinearLayout>

        <LinearLayout
            android:id="@+id/f52"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_below="@+id/d86"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/music_pic"
            android:layout_toRightOf="@+id/music_pic"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/favorite"
                android:layout_width="25dp"
                android:layout_height="28dp"
                android:layout_weight="1"
                android:background="@null"
                android:contentDescription="收藏"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/player_notification_not_favorite" />

            <ImageView
                android:id="@+id/pre"
                android:layout_width="25dp"
                android:layout_height="28dp"
                android:layout_weight="1"
                android:background="@null"
                android:contentDescription="上一首"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/player_notification_pre" />

            <ImageButton
                android:id="@+id/y9"
                android:layout_width="25dp"
                android:layout_height="28dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@null"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/player_notification_play" />

            <ImageButton
                android:id="@+id/y8"
                android:layout_width="25dp"
                android:layout_height="28dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@null"
                android:contentDescription="下一首"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/player_notification_next" />

            <ImageView
                android:id="@+id/y7"
                android:layout_width="25dp"
                android:layout_height="28dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/player_notification_lyric_closed" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
