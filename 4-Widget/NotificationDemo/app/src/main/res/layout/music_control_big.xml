<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/f55"
        android:layout_width="100dp"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/music_pic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/f5_"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/f55">

        <TextView
            android:id="@+id/music_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:focusable="true"
            android:gravity="bottom"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:text="Name" />

        <TextView
            android:id="@+id/singer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/music_name"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:text="Jay" />

        <!--        <ImageButton-->
        <!--            android:id="@+id/exit"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_alignParentTop="true"-->
        <!--            android:layout_alignParentRight="true"-->
        <!--            android:layout_gravity="center_vertical"-->
        <!--            android:background="@null"-->
        <!--            android:contentDescription="关闭"-->
        <!--            android:padding="8dp"-->
        <!--            android:src="@drawable/notification_exit" />-->
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/f58"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/f5_"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/f55"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/favorite"
            android:layout_width="25dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:background="@null"
            android:contentDescription="收藏"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/player_notification_not_favorite" />

        <ImageView
            android:id="@+id/pre"
            android:layout_width="25dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:background="@null"
            android:contentDescription="上一首"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/player_notification_pre" />

        <ImageView
            android:id="@+id/play_on"
            android:layout_width="25dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:background="@null"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/player_notification_play" />

        <ImageView
            android:id="@+id/next"
            android:layout_width="25dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:background="@null"
            android:contentDescription="下一首"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/player_notification_next" />

        <ImageView
            android:id="@+id/lyric_closed"
            android:layout_width="25dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:background="@null"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/player_notification_lyric_closed" />
    </LinearLayout>
</RelativeLayout>
