<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="wrap_content"
android:layout_height="wrap_content">

<RelativeLayout
    android:layout_width="310dp"
    android:layout_height="400dp"
    android:background="@drawable/bg_close_phone_tip">
    <!--  @hide  -->
    <LinearLayout
        android:id="@+id/close_phone_tip_close"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:paddingTop="28dp"
        android:paddingRight="28dp"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_close_close_phone_tip" />

    </LinearLayout>


    <ImageView
        android:id="@+id/close_phone_tip_ani"
        android:layout_width="154dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="66dp"
        android:src="@drawable/ani_close_phone" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="56dp"
        android:gravity="center"
        android:fontFamily="mipro-medium"
        android:text="@string/tip_use_front_camera"
        android:textColor="#ffffff"
        android:textSize="20sp" />
</RelativeLayout>
</LinearLayout>