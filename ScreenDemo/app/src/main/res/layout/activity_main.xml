<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Button 1"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/screen_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="物理屏幕尺寸"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/physical_resolution"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="物理屏幕分辨率"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/other_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="状态栏和导航栏"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/available_resolution"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="APP可用区域"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/get_density"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="1dp=(?)px"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/get_xy_dpi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="宽、高DPI"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/get_diagonal_dpi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="对角线DPI"
        android:textAllCaps="false" />

</LinearLayout>