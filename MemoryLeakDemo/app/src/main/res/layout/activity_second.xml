<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >

    <Button
        android:id="@+id/botton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Previous Activity"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/static_leak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Static Leak"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/handler_leak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Handler Leak"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/thread_leak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Thread Leak"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/resource_leak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Resource Leak"
        android:textAllCaps="false"
        />

</LinearLayout>